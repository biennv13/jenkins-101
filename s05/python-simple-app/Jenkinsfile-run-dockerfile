pipeline {
    agent none
    stages {
        stage('build images') {
            agent {
                label 'node-1'
            }
            steps {
                sh 'docker build --tag my-python-app .'
            }
        }
        stage('run') {
            steps {
                sh 'python3 s05/python-simple-app/app.py &'
            }
        }
    }
}
